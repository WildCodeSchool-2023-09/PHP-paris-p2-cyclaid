{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/add_post.css">
{% endblock %}
{% block content %}
<nav class="navbar fixed-top bg-body-tertiary" id="navbar_add_form">GIVE TO THE COMMUNITY</nav>
<div class="row">
    <div class="title_logo" id="logo">
        <h1>Cycl'aid</h1>
    </div>
    <div class="col-md-4 col-md-offset-6">
        <section id="form_add">
            <form name="addPartForm" action="" method="post" enctype="multipart/form-data">
                <div>
                    <label for="title"></label>
                    <input type="text" name="title" id="title_select" placeholder="TITLE" required/>
                </div>
                <p class="text-danger"> {{ errors['title'] }} </p>
                <div>
                    <label for="reference"></label>
                    <input type="text" name="reference" id="reference_select" placeholder="PART REFERENCE" required/>
                </div>
                <p class="text-danger"> {{ errors['reference'] }} </p>
                <div class="select" id="select">
                    <div>
                        <label for="category"></label>
                        <select name="category" id="category_select" required>
                            <option value="">CATEGORY</option>
                        {% for key_category, category in constant('App\\Model\\PostManager::CATEGORY') %}
                            <option value="{{ key_category + 1 }}">{{ category }}</option>
                        {% endfor %}
                        </select>    
                    </div>
                    <div>
                        <label for="wear"></label>
                        <select name="wear" id="wear_select" required>
                            <option value="">WEAR STATE</option>

                        {% for key, wear in constant('App\\Model\\PostManager::WEAR') %}
                            <option value="{{ key }}">{{ wear }}</option>
                        {% endfor %}
                        
                        </select>
                    </div>
                    <p class="text-danger"> {{ errors['category'] }} </p>
                    <p class="text-danger"> {{ errors['wear'] }} </p>
                    <div>
                        <label for="brand"></label>
                        <select name="brand" id="brand_select" required>
                            <option value="">BRAND</option>
                        {% for key_brand, brand in constant('App\\Model\\PostManager::BRAND') %}
                            <option value="{{ key_brand + 1 }}">{{ brand }}</option>
                        {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label for="location"></label>
                        <select name="location" id="location_select" data-rel="form-sample-phone" required>
                            <option value="">LOCATION</option>
                        {% for location in constant('App\\Model\\PostManager::LOCATION') %}
                            <option value="{{ location }}">{{ location }}</option>
                        {% endfor %}
                        </select>
                    </div>
                    <p class="text-danger"> {{ errors['brand'] }} </p>
                    <p class="text-danger"> {{ errors['location'] }} </p>
                </div>
                <div>
                    <label for="description"></label>
                    <textarea name="description" id="description_select" placeholder="DESCRIPTION" required></textarea>
                </div>
                <p class="text-danger"> {{ errors['description'] }} </p>
                <div id="file">
                    <label for="file" id="label_file_select">
                        <div id="text_file_select">
                            <img src="/assets/images/icon_add_picture.png" alt="add_icon" id="add_icon_select"/>
                        </div>
                        <input type="file" name="file[]" id="file_select" multiple required/>
                    </label>
                    <div id="preview_pictures_field">
                    </div>
                </div>
                <p class="text-danger"> {{ errors['file'] }} </p>
                <div>
                    <input type="submit" id="cta_form_add_give" value="GIVE !"/>
                </div>
            </form>
        </section>
    </div>
</div>
<footer id="footer"></footer>
<script src="/assets/js/form.js"></script>
{% endblock %}
