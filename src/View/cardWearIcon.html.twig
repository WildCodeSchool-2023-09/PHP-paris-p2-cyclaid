{% if post.wear_status == "new" %}
    <img class = "cardIcon" src = "assets/images/icon_state_new.png">
{% elseif post.wear_status == "good" %}
    <img class = "cardIcon" src = "assets/images/icon_state_good.png">
{% elseif post.wear_status == "used" %}
    <img class = "cardIcon" src = "assets/images/icon_state_used.png">
{% else %}
    <img class = "cardIcon" src = "assets/images/icon_state_to_fix.png">
{% endif %}